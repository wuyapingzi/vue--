.modal
  &-wrap
    background: rgba(0,0,0,0.3)
    position: fixed;
    top: 0
    right: 0
    bottom: 0
    left: 0
    visibility: hidden
    opacity: 0
    transition: opacity  0.5s
    z-index: 999
  &-in
    visibility: visible
    opacity: 1
  &-dialog
    position: absolute
    margin: auto
    left: 50%
    top: 50%
    transform: translate(-50%,-50%)
    width: 20rem
    background: $white-color