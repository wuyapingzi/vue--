.landing-invested-gift
  $landing-invested-gift-title = #FF413C
  $landing-invested-gift-title-desc = #9295A2
  $landing-invested-gift-dt = #FF433F
  $landing-invested-gift-sub = #BE7D73
  $landing-invested-gift-intro = #FF7F58
  $landing-invested-gift-intro-bg = #FFE9D7
  $landing-invested-gift-border = #E3E3EB
  background-image: linear-gradient(-180deg, $landing-invested-gift-intro-bg 25%, #FFF2E7 100%)
  text-align: center
  &-banner 
    img 
      max-width: 100%
  &-title 
    display: inline-block
    font-size: 1.125rem
    color: $landing-invested-gift-title
    text-align: center 
    line-height: 1.563rem
    margin: 0 0 1.875rem
    position: relative
    &:before, &:after 
      content: ''
      width: 2.313rem
      height: 1.563rem
      position: absolute 
      top: 0
    &:before
      background: url('/img/mobile/landing-invested-gift-title-left.png') no-repeat center center
      background-size: contain
      left: -2.8rem
    &:after 
      background: url('/img/mobile/landing-invested-gift-title-right.png') no-repeat center center
      background-size: contain
      right: -2.8rem
  &-card
    padding: 2.5rem 1.563rem 0 1.563rem
    .item-jd-card 
      height: 6.25rem
      padding: 0.5rem
      background-color: $white-color
      box-shadow: 0 0 0.375rem 0 rgba(255,177,156,0.47)
      border-radius: 0.44rem
      margin-bottom: 0.94rem
      img
        width: 8.91rem
        height: 5.4rem
        float: left
      &-state
        text-align: center
        margin: 1rem 0 0 58%
        a 
          display: block 
          width: 6.313rem 
          height: 1.875rem
          font-size: 0.875rem
          line-height: 1.875rem
          color: $white-color
          text-align: center
          border-radius: 0.125rem
          margin: 0 auto 0.28rem
          background-image: linear-gradient(-135deg, $landing-invested-gift-title 0%, #FF8359 100%)
        a[disabled] 
          background: rgba(186,188,198,0.76)
        .state-confirming
          height: 2rem
          background-image: none
          background-color: $white-color
          color: $landing-invested-gift-title
          border: 2px solid $landing-invested-gift-title
          border-radius: 0.125rem
        
        p 
          font-size: 0.625rem
          color: $landing-invested-gift-title-desc
          margin: 0
          text-align: center
  &-register 
    width: 100%
    padding: 2.5rem 1rem 0
    &-content
      margin: 0 auto
      text-align: center 
      clearfix()
      dl
        margin: 0 0 1.56rem 0
        width: 50%
        height: 6.16rem
        background: url('/img/mobile/landing-invested-gift-red-packet.png') no-repeat center center
        background-size: contain
        float: left
      dt 
        font-size: 1.31rem 
        color: $landing-invested-gift-dt
        margin-top: 1.2rem
        font-weight: bold
        span 
          font-size: 1rem
      dd 
        width: 7.8rem
        font-size: 0.625rem
        color: rgba(255,255,255,0.70)
        margin: 0.8rem auto 0
        &:last-child
          margin-top: 0.1rem
    &-btn
      display: block
      width: 80%
      margin: 0.313rem auto 0
      background-image: linear-gradient(-135deg, $landing-invested-gift-title 0%, #FF8359 100%)
      border-radius: 0.125rem 
      color: $white-color
      height: 2.56rem
      line-height: 2.56rem
      text-align: center
  &-product 
    width: 100%
    padding: 2.5rem 1.25rem 0 1rem
    h1 
      &:before, &:after
        top: 0.7rem
      span 
        display: block
        font-size: 0.563rem
        color: $landing-invested-gift-sub
        font-weight: normal
    &-content  
      padding: 0.625rem 0.78rem
      background-color: $white-color 
      .item-product 
        padding: 1.25rem 0
        border-bottom: 1px solid $landing-invested-gift-border
        clearfix()
        dl 
          float: left 
          width: 42%
          margin: 0
        dt 
          font-size: 1.563rem
          color: $landing-invested-gift-title
          line-height: 1.563rem
          font-weight: bold
        dd 
          font-size: 0.75rem
          color: $landing-invested-gift-title-desc
          margin: 0.53rem 0 0 0
        dl:nth-child(2)
          width: 22%
          dt 
            color: $text-color
            font-size: 1.06rem
            font-weight: normal
        a 
          display: block 
          float: right 
          width: 5.1rem 
          height: 1.69rem 
          line-height: 1.7rem
          border-radius: 0.125rem
          font-size: 0.875rem
          color: $white-color
          margin-top: 0.8rem
          text-align: center
          background-image: linear-gradient(-135deg, $landing-invested-gift-title 0%, #FF8359 100%)
        &:last-child
          border: 0
    &-tips 
      width: 100%
      padding: 0.72rem 0.84rem
      border-radius: 0.125rem 
      background-color: rgba(255,255,255,0.40)
      font-size: 0.75rem 
      margin-top: 0.91rem
      color: $landing-invested-gift-intro
      line-height: 1.19rem
      text-align: left
      p 
        margin: 0
  &-platform 
    width: 100%
    padding: 2.5rem 1.25rem 1.875rem 1rem
    clearfix()
    dl 
      width: 23%
      margin: 0 2.4% 0 0
      text-align: center
      float: left
      &:last-child
        margin-right: 0
    dt 
      width: 4.47rem
      height: 4.47rem
      border-radius: 100%
      margin: 0 auto
    dd 
      font-size: 0.75rem 
      color: $text-color
      margin-left: 0
      &:first-child
        margin-top: 0.69rem
    .item-bank
      dt 
        background: url('/img/mobile/landing-register-jdcard-icon-bank.png') no-repeat center center
        background-size: 4.47rem 4.47rem
    .item-assets
      dt
        background: url('/img/mobile/landing-register-jdcard-icon-registered-fund.png') no-repeat center center
        background-size: 4.47rem 4.47rem
    .item-class
      dt 
        background: url('/img/mobile/landing-register-jdcard-icon-secure.png') no-repeat center center
        background-size: 4.47rem 4.47rem
    .item-union
      dt
        background: url('/img/mobile/landing-register-jdcard-icon-alliance.png') no-repeat center center
        background-size: 4.47rem 4.47rem
  &-intro
    text-align: left 
    width: 100%
    font-size: 0.75rem
    color: $landing-invested-gift-intro
    letter-spacing: 0
    line-height: 1rem
    background-color: $landing-invested-gift-intro-bg
    padding: 1.56rem 0.94rem
    ul 
      list-style: none
      padding-left: 0
    th 
      font-weight: normal
  &-redpacket 
    padding: 2.81rem 0
    img 
      display: block
      margin: 0 auto 1.56rem
      width: 11.13rem 
      height: 8.1rem
