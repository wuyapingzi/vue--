.about
  $sub-nav-bg = #f5f5f9
  $sub-nav-active-bg = #55aefe
  $shadow-color = #d6ecff
  $list-line-bg = #a8bbe7
  $filing-line-bg = #F9FbFF
  &-wrap
    padding: 4rem 0 0
    margin: 0 auto
    letter-spacing: 1px
    ul,li
      margin: 0
      padding: 0
    h3
      font-weight: normal  
    .header-secondary-nav
      width: 100%
      padding: 1rem
      background: $sub-nav-bg
      position: fixed
      overflow: hidden
      top: 0
      left: 0
      z-index: 1
      .section
        width: 100%
        overflow-x: scroll
      ul
        width: 1200px  
      a
        color: $text-color
        padding: .6rem .8rem
        background: $white-color
        margin-right: 1rem
        display: block
        border-radius: .2rem
      .native
        background: $sub-nav-active-bg
        color: $white-color
      li
        float: left
        list-style: none
  &-gap
    padding: 0 1rem
  &-top-title
    text-align: center
    padding: 2rem 0 1.4rem
    position: relative
    &:after
      content: ''
      display: block
      width: 2.4rem
      height: .3rem
      background: $sub-nav-active-bg
      border-radius: .4rem
      position: absolute
      bottom: 0
      left: 50%
      margin-left: -1.2rem
  &-safety
    &-desc
      font-size: $font-size-small 
    &-info
      margin-top: 3rem
      img
        width: 100%
    &-wrap
      box-shadow: 0 0 20px $shadow-color
      position: relative
      margin-top: 6rem
      padding-top: 40px
      padding-bottom: 2rem
      font-size: $font-size-small 
      &:before
        content: ''
        display: block
        width: 70px
        height: 70px
        position: absolute
        background: url('/img/mobile/about-safety-info-top.png')
        background-size: contain
        top: -35px
        left: 50%
        margin-left: -35px
      h3
        text-align: center
        color: $sub-nav-active-bg
      dd
        margin: 0
      dt
        height: 58px
        line-height: 58px
        background-size: contain
        font-size: $font-size-large
        margin-bottom: 1rem
    &-list
      &-dev
        background: url('/img/mobile/about-safety-list-dev.png') no-repeat
      &-safeinfo
        background: url('/img/mobile/about-safety-safeinfo.png') no-repeat
      &-bak
        background: url('/img/mobile/about-safety-bak.png') no-repeat
    &-orgs
      overflow: hidden
      padding-bottom: 2rem
      font-size: $font-size-small 
      dl
        float: left
        overflow: hidden
        display: block
        text-align: center
        width: 50%
      dt
        width: 100px
        height: 100px
        margin: 0 auto
        img
          width: 100%
      dd
        margin: 1rem 0 0
  &-contact 
    &-map
      padding: 22px 14px 14px
      width: 100%
    &-title
      margin: 0
      padding: 10px 20px 18px
      font-size: $font-size-base 
      font-weight: 700
    &-detail
      padding: 0 0 20px 20px
      dl
        margin: 0  0 12px 
        height: 12px
        line-height 12px
        font-size: $font-size-tiny
      dt
        float: left
        color: $text-medium
      dd
        float: left
        margin: 0
        color: $text-color
  &-risk
    &-desc-img
      width: 100%
      margin-top: 1.4rem
    &-assess
      img
        width: 52px
      dl
        clearfix()
      dt
        width: 20%
        float: left
        margin-top: .3rem
        position: relative
        &:after
          content: ''
          display: block
          width: 2px
          height: 1.8rem
          background: $list-line-bg
          position: absolute
          bottom: -1.8rem
          left: 1.6rem
      .about-risk-assess-long
        &:after
          bottom: -3rem
          height: 3rem
      .about-risk-assess-last
        &:after
          display: none     
      dd
        margin: 0 0 0 20%
      h3
        margin: 0
        font-size: $font-size-base 
      p
        margin-top: .6rem
        color: $text-black-active
        font-size: $font-size-small 
    &-wrap
      overflow: hidden
      margin-bottom: -1rem
      padding: 1rem
    &-list
      width: 48%
      float: left
      height: 220px
      box-shadow: 0 0 8px $shadow-color
      margin-bottom: 1.4rem
      padding: 0 .6rem
      h4
        text-align: center
        margin-bottom: 0
      p
        margin-top: .6rem
        font-size: $font-size-small 
      &-norap
        float: right
    &-info
      background: url('/img/mobile/about-risk-icon-info.png') bottom right no-repeat
      background-size: 50%
    &-monitor
      background: url('/img/mobile/about-risk-icon-metion.png') bottom right no-repeat
      background-size: 50%
    &-early
      background: url('/img/mobile/about-risk-icon-early.png') bottom right no-repeat
      background-size: 50%
    &-visit
      background: url('/img/mobile/about-risk-icon-visit.png') bottom right no-repeat
      background-size: 50%
    &-method
      padding-bottom: 2rem
      clearfix()
      dl
        width: 33.33%
        float: left
      dt
        position: relative
        font-size: $font-size-small 
        &:after
          content: ''
          display: block
          width: 100%
          height: 2px
          background: $sub-nav-active-bg
          position: absolute
          bottom: -1.7rem
          left: 0
      dd
        margin: 0
        font-size: $font-size-tiny
      p
        margin: 0  
      img
        width: 20px
        margin: 1rem 0
        position: relative
        z-index: 1
      .about-risk-method-stage
        width: 22.33%
        text-align: center
      .about-risk-method-last
        width: 44.33%
        text-align: right
  &-report
    &-list
      img
        width: 100%
    &-bottom
      padding-bottom: 2rem    
  &-platform
    $platform-title-bg = #55AEFE
    $platform-list-bg = #EAF3FF
    $platform-explain-color = #666666
    $platform-record-color = #1598F4
    $platform-info-bg =  #FFF5EA
    $platform-info-record = #FF9E00
    $table-border-color = #284583
    $table-th-border = #dae6fa
    $table-th-bg = #f8fbff
    $modal-btn-color = #F55151
    margin-top: 0.625rem
    background-color: $white-color
    padding: 2rem 1rem 3rem
    &-title
      text-align: center
      margin-bottom: 1.875rem
      &:after
        content: ''
        width: 2.5rem
        height: 3px
        background: $platform-title-bg
        display: block
        border-radius: 1px
        margin: 0 auto
      h4 
        font-size: 1.25rem
        font-weight: normal
        margin: 0
      .expiry-date
        color: $gray-txt-black
        font-size: $font-size-tiny 
        margin: 0.5rem 0 0.625rem
    &-content
      margin-bottom: 3.12rem
      position: relative
      .borrow-bg
        width: 100%
        position: absolute
      .list
        padding: 1.12rem 0.75rem 1.12rem 1.56rem
        background: $platform-list-bg
      .item
        position: relative
        height: 2.875rem
        line-height: 2.875rem
        .explain
          color: $platform-explain-color 
          font-size: $font-size-small 
          position: absolute
          left: 0
        .record
          color: $platform-record-color
          font-size: $font-size-base 
          position: absolute
          right: 0
        .borrow-tip
          width: 0.825rem
          height: 0.825rem
          display: inline-block
          vertical-align: middle
      .tips
        font-size: $font-size-tiny
        color: $gray-txt-black 
        text-align: right
        padding-top: 0.625rem
      .info
        background: $platform-info-bg
        .record
          color: $platform-info-record
      .borrow
        background: transparent
        padding-top: 4rem
        padding-bottom: 2rem
        .record
          color: $text-color 
    &-borrower
      .title
        color: $text-color 
        font-size: $font-size-small
        text-align: center
        margin: -1rem 0 0.625rem
      table
        border: 1px solid $table-border-color
        font-size: $font-size-tiny 
        text-align: center
        margin-bottom: 3rem
        th
          height: 2rem
          line-height: 2rem
          border-bottom: 1px solid $table-th-border
          background: $table-th-bg
        td
          height: 2rem
          line-height: 2rem
    &-overdue
      padding: 0 1rem
      .item
        font-size: $font-size-small
        color: $platform-explain-color
        margin-bottom: 1rem
        .num
          float: right
    &-modal-wrap
      background: rgba(0,0,0,0.3) 
      position: fixed
      top: 0
      right: 0
      bottom: 0
      left: 0
      visibility: hidden
      opacity: 0
      transition: opacity  0.5s 
    &-modal-in
      visibility: visible
      opacity: 1
    &-modal
      position: absolute
      margin: auto
      left: 50%
      top: 50%
      transform: translate(-50%,-50%)
      width: 17.5rem
      padding-top: 1.8rem
      border-radius: 0.25rem
      background: $white-color
      &-info
        padding: 0 1.25rem
        height: 3rem
        margin-bottom: 1.56rem
        margin-top: 0
        font-size: $font-size-small
        text-align: center
        p
          margin-top: 0 
        .count
          line-height: 3rem
      &-btn
        margin: 0 auto
        overflow: hidden
        text-align: center
        button
          height: 2.5rem
          width: 100%
          border: none
          background: $modal-btn-color
          border-bottom-right-radius: 0.25rem
          border-bottom-left-radius: 0.25rem
          color: $white-color 
  &-company
    $company-title-bg = #55AEFE
    $company-chart-blue = #96CEFF
    $company-chart-red = #F55150
    $company-chart-origin = #FFA338
    $company-mange-info-border = #979797
    padding: 2rem 1rem
    img
      width: 100%
    p
      font-size: $font-size-small
      line-height: 1.5rem
    &-title
      text-align: center
      margin: 3.125rem 0 1.8rem
      &:after
        content: ''
        width: 2.5rem
        height: 3px
        background: $company-title-bg
        display: block
        border-radius: 1px
        margin: 0.625rem auto 0
      h4 
        font-size: 1.25rem
        font-weight: normal
        margin: 0
    &-commerce
      img
        width: 7rem
        margin: 0 auto
        display: block
    &-cture
      padding: 0 1rem
    &-partner
      dl
        padding-left: 0.44rem
        &:first-child
          position: relative
          &:before
            content: ''
            width: 0.875rem
            height: 0.625rem
            background-color: $company-title-bg
            display: block
            margin: 0 0 0.44rem -0.44rem
          &:after
            position: absolute
            content: ''
            width: 2px
            height: 8.125rem
            background: linear-gradient(-180deg, $company-title-bg 0%, rgba(85,174,254,0.00) 95%)
            top: 0
            left: -0.1rem
      dt
        font-size: 1.06rem
        color: $text-color
        line-height: 1.25rem
      dd
        margin: 0.563rem 0 0
        font-size: 0.875rem
        color: $gray-txt-black
        line-height: 0.875rem
      .person-partner
        margin-bottom: 2.82rem
        text-align: left
        padding-left: 0.44rem
        position: relative
        &:before
          content: ''
          width: 0.875rem
          height: 0.625rem
          background-color: $company-title-bg
          display: block
          margin: 0 0 0.44rem -0.44rem
        &:after
          position: absolute
          content: ''
          width: 2px
          height: 8.125rem
          background: linear-gradient(-180deg, $company-title-bg 0%, rgba(85,174,254,0.00) 95%)
          top: 0
          left: -0.1rem
      .name
        font-size: 1.25rem
        color: $company-title-bg
      .position
        margin: 0.625rem 0 0.24rem
        font-size: 0.875rem
        color: $text-color
      .info
        font-size: 0.875rem
        line-height: 1.5rem
        color: $text-color
      .partner-last
        margin-bottom: 1rem
      .all-manage-info
        display: inline-block
        width: 100%
        text-align: right
        font-size: 0.875rem
        padding-right: 0.4rem
        color: $text-black-active
    &-manage-info
      .manage-title
        text-align: center
      table
        width: 90%
        border-collapse: collapse
        margin: 1rem
        border-left: 1px solid $company-mange-info-border
      thead
        border-top: 1px solid $company-mange-info-border
      td, th
        font-size: $font-size-small
        text-align: center
        border-bottom: 1px solid $company-mange-info-border
        border-right: 1px solid $company-mange-info-border
        line-height: 2.4rem
      th
        font-weight: normal
        color: $text-color
      .manage-name
        width: 34%
      td
        color: $text-black-active
    &-staff
      &-chart
        height: 8.2rem
        .chart
          width: 8.2rem
          height: 8.2rem
          display: inline-block
          vertical-align: top
          margin-right: 1.8rem
        .legend
          display: inline-block
          margin-top: 2.5rem
          margin-right: -5rem
        .legend-item
          font-size: $font-size-tiny
          &:before
            content: ''
            width: 0.625rem
            height: 0.625rem
            display: inline-block
            background: $company-chart-blue
            margin-right: 0.625rem
            border-radius: 2px
        .red
          &:before
            background: $company-chart-red 
        .orange
          &:before
            background: $company-chart-origin
    &-modal-wrap
      background: rgba(0,0,0,0.3) 
      position: fixed
      top: 0
      right: 0
      bottom: 0
      left: 0
      visibility: hidden
      opacity: 0
      transition: opacity  0.5s 
    &-modal-in
      visibility: visible
      opacity: 1  
    &-modal
      position: absolute
      margin: auto
      left: 50%
      top: 50%
      transform: translate(-50%,-50%)
      width: 75%
      text-align: center
      img
        width: 100%
  &-product
    $product-desc-shadow-color = #F0F0F0
    $about-product-link = #73A3FF
    $about-product-fees-border = #979797
    margin: 0 auto
    letter-spacing: 1px
    padding-bottom: 0.1rem
    .product-desc
      padding: 1.875rem 0 1.875rem 1.25rem
      box-shadow: 0 1px 1.25rem 0 $product-desc-shadow-color
      li
        list-style: none
        color: $gray-txt-black
        margin-bottom: 1.25rem
        font-size: $font-size-small
      span
        color: $text-color
        font-size: $font-size-large
      .item-last
        margin-bottom: 0
      .item-repay
        font-size: $font-size-small
      a
        color: $about-product-link
    .product-desc-plan
      margin-bottom: 3.125rem
    &-loan
    &-plan
      color: $text-color
      font-size: $font-size-small
      line-height: 1.5rem
      p
        margin: 0 auto
    img
      width: 100%
      margin: 30px 0
    &-modal-wrap
      table
        border-collapse: collapse
        margin: 0.6rem
        border-left: 1px solid $about-product-fees-border
      thead
        border-top: 1px solid $about-product-fees-border
      td, th
        font-size: $font-size-small
        text-align: center
        border-bottom: 1px solid $about-product-fees-border
        border-right: 1px solid $about-product-fees-border
        line-height: 2.4rem
      th
        font-weight: normal
        color: $text-color
      td
        color: $text-black-active
        p
          line-height: 1.25rem
          margin: 0.8rem 0.4rem
      .business-type
        width: 33%


  &-audit
    text-align: center
    .nothing-data
      padding-top: 7.81rem
      img
        width: 7.03rem
        height: 7rem
        margin: 0 auto 2.25rem
      p
        padding-left: 1rem
        margin-top: 0
        font-size: 1.19rem
        color: $text-color
        line-height: 1.19rem
  &-annals
    img
      width: 100%
    &-index
      background: url('/img/mobile/about-annal-index-bg.png') center bottom no-repeat
      background-size: cover
    &-intro
      background: url('/img/mobile/about-annal-intro-bg.png') center top no-repeat
      background-size: cover
    &-last
      background: url('/img/mobile/about-annal-last-bg.png') center top no-repeat
      background-size: cover
    &-navigation
      width: 1.25rem
      height: 1.32rem
      position: fixed
      left: 50%
      bottom: 1.3rem
      margin-left: -0.66rem
      background-size: contain
      animation: annalsArrow 2s infinite
    &-sixteen-last
      background: url('/img/mobile/about-annals-2016-last-bg.jpg') center top no-repeat
      background-size: contain
      img
        position: absolute
        bottom: 0
    &-sixteen-navigation
      width: 1.28rem
      height: 1.28rem
      position: fixed
      left: 50%
      bottom: 0.5rem
      margin-left: -0.66rem
      background-size: contain
      animation: annalsSixteenArrow 2s infinite

  &-law
    padding: 1rem
    &-item
      width: 100%
      overflow: hidden
      white-space: no-wrap
      text-overflow: ellipsis
      line-height: 3rem
      border-bottom: 1px solid $border-color-light
      a
        display: inline-block
        width: 100%
        color: $text-black-active
        line-height: 3rem
  &-filing
    $filing-title-bg = #55AEFE
    padding: 1.6rem
    padding-top: 1.25rem
    &-content
      border-left: .092rem solid $filing-title-bg
      padding-left: 1.156rem
      margin-top: 1rem
    &-process
      position: relative
      &:before
        content: ''
        display: block
        width: .9rem
        height: .8rem
        position: absolute
        left: -1.598rem
        top: .125rem
        background: url('/img/mobile/about-file-mobile-time.png') no-repeat 0 -1.781rem
        background-size: 24.5px 41.5px
      .filing-time
        font-size: .938rem
        color: $gray-txt-light
        margin-bottom: .625rem
        font-weight: 600
      .filing-content
        background: $filing-line-bg 
        border: 1px solid $filing-title-bg
        border-radius: 2px
        margin-bottom: .625rem
        padding: .81rem .3rem
      p 
        font-size: .75rem
        line-height: 1.063rem
        color: $grey-color
        margin: 0
    .first
      height: 3.6rem
      &:before
        width: 1.6rem
        height: 1.6rem
        left: -1.92rem
        top: -.2rem
        background-position: 0 0
    .last
      &:after
        content: ''
        width: 1rem
        height: 5rem
        display: block
        background: $white-color
        position: absolute
        left: -1.6rem
        top: .89rem
    .content-desc
      margin-bottom: 2.22rem
@media screen and (max-device-width: 350px)
  .about-company-staff
    .chart
      margin-right: 0
@keyframes annalsArrow{
  from {
    background: url('/img/mobile/about-annals-2017-arrow1.png') center center no-repeat
    background-size: contain
  }
  to {
    background: url('/img/mobile/about-annals-2017-arrow2.png') center center no-repeat
    background-size: contain
  }
}
  @keyframes annalsSixteenArrow{
    from {
      background: url('/img/mobile/about-annals-2016-arrow1.png') center center no-repeat
      background-size: contain
    }
    to {
      background: url('/img/mobile/about-annals-2016-arrow2.png') center center no-repeat
      background-size: contain
    }
  }

