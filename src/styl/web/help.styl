.help
  $help-item-hover = #F9F9F9
  $help-item-diff = #FCFCFD
  $help-answer-color = #666666
  margin: 20px auto 40px 
  &-science
    background-color: $white-color
    margin-top: 20px
    min-height: 480px
    padding-bottom: 40px
    &-title
      padding: 20px
      border-bottom: 1px solid $french-grey-color
      h3
        display: inline-block
        border-left: 3px solid $btn-primary-color
        margin: 0
        padding-left: 13px
      a
        float: right
        color: $help-primary
        margin-right: 20px
      .back
        cursor: pointer
    &-list
      padding: 20px 30px
      .item-spac
        background: $help-item-diff
      .item-question
        display: block
        height: 60px
        padding: 20px
        letter-spacing: 0.7px
        color: $grey-color-dark
        cursor: pointer
        &:hover
          background: $help-item-hover
      .item-time
        color: $gray-txt-black
        float: right
    &-content
      padding: 40px
      h3
        text-align: center
      .title-time
        margin: 0 0 10px
      span
        color: $gray-txt-black
        margin-right: 40px
      p
        letter-spacing: 1px
        line-height: 26px
        text-indent: 2em
      .help-img
        img 
          margin: 0 auto
          display: block
          padding-top: 20px
      .help-paragraph-margin
        margin-top:40px
    .hide
      display: none
  &-question
    &-content
      .question-classify
        height: 60px
        border-bottom: 1px solid $french-grey-color
        list-style: none
        padding: 0
        li
          margin-bottom: -2px
          width: 220px
          text-align: center
          font-size: $font-size-middle
          padding: 0 30px
          float: left
          position: relative
          cursor: pointer
          &:after
            content: ''
            height: 16px
            width: 2px
            background: $french-grey-color
            position: absolute
            right: 0
            top: 20px
          a
            line-height: 58px
            display: block
            color: $gray-txt-black
          .active
            border: none
            color: $gray-txt-light
            border-bottom: 2px solid $btn-primary-color
        .last-list
          &:after
            content: ''
            width: 0
      .answer-content
        padding: 20px 20px 40px
        position: relative
        display: none
        color: $help-answer-color
        background-color: $help-item-diff
        ul
          list-style: lower-alpha 
        .risk-reason-text
          list-style: disc
      .pack-up 
        position: absolute
        bottom: 15px
        right: 30px
        color: $help-primary 
        cursor: pointer
      table
        width: 100%
        border: 1px solid $text-color
        border-collapse: collapse
        td,
        th
          border: 1px solid $text-color
          font-size: $font-size-small 
          text-align: center
      .cue-text
        color: $gray-txt-black 
        font-size: $font-size-tiny
      .rule_title
        font-weight: 600
        font-size: $font-size-middle
      