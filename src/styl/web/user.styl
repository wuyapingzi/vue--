.user
  $title-red-color = #ED3E40
  $border-base-color = #B5B5B5
  $agreement-base-color = #73ADFF
  $input-label-color = #6A6A6A
  $input-focus-color = #73a3ff
  $footer-font-color = #717B85
  $footer-bg-color = #f5f5f9
  &-view
    min-width: $container-width
    $smscode-btn-color = #FFA338
    background-color: $white-color
    overflow: hidden
    &-warpper
      width: $container-width
      min-width: $container-width
      margin: 0 auto
      background: url('/img/login-signup-bg.png') 20px 0 no-repeat
    &-form
      background-color: $white-color
      height: 400px
      width: 400px
      position: absolute
      right: 0
    &-tabs
      width: 400px
      height: 44px
      margin: 70px 0 auto auto
      padding: 0 96px 0 96px
      .active
        color: $title-red-color
        border-bottom: solid 2px $title-red-color
    &-login
    &-signup
      font-size: $font-size-h3
      width: 64px
      float: left
      cursor: pointer
      color: $gray-txt-light
      text-align: center
      padding-bottom: 8px
    .login-form
    .signup-form
      display: none
    .error-label-container
      width: 300px
      height: 20px
      overflow: hidden
      position: absolute
      color: $base-red-color
      top: -20px 
      right: 0
      .errors
        padding: 0
      li
        list-style: none
        color: $base-red-color
      .error
        border: none
    .user-signup-tab
      margin-right: 76px
      position: relative
      &:after
        content: ''
        display: block
        width: 1px
        height: 20px
        background-color: $border-base-color
        position: absolute
        right: -38px
        top: 6px
    &-content
      width: 400px
      margin: 25px 60px auto auto
      overflow: hidden
      min-height: 600px
      min-width: 400px
      position: relative
      .form-group
        height: 40px
        margin-bottom: 20px
        .form-control
          box-shadow: none
          outline: none
          line-height: 40px
          &:fcous
            box-shadow: none
            outline: none
            border-color: $agreement-base-color
      .get-smscode-voice
        margin-bottom: 35px  
      label
        font-size: $font-size-base
        color: $input-label-color
        display: inline-block
        width: 80px
        height: 40px
        line-height: 40px
        text-align: right
        margin-right: 20px
        float: left
        font-weight: normal
      .form-control
        width: 300px
        height: 40px
        position: relative
        border-radius(4px)
        border: solid 1px $border-base-color
        float: left
        padding: 0 12px
        &:focus
          border: solid 1px $input-focus-color
      .control
        &-small
          width: 170px
          margin-right: 10px
        &-captcha
          width: 120px
          height: 40px
          border-radius(4px)
          cursor: pointer
          border: solid 1px $border-base-color
        &-button
          width: 120px
          height: 40px
          border-radius(4px)
          color: $white-color
          background-color: $smscode-btn-color
          &:active
            outline: none
            box-shadow: none
      .form-button
        width: 300px
        font-size: $font-size-middle
        border-radius(4px)
        margin: 0 0 10px 100px
        &:active
          border: none
          background-color: $title-red-color
      .forgot-group
        color: $gray-txt-light
        font-size: $font-size-base
        margin-top: -10px
        text-align: right
      .agreement-group
        width: 300px
        height: 16px
        margin: -10px 0 auto auto
        font-size: $font-size-base
        color: $brand-gray
        text-align: right
        .agreement-control
          float: left
          margin: 4px 4px auto auto
        span
          float: left
        .protocol
          color: $agreement-base-color
          float: left
      .login-form-btn
      .signup-form-btn
        position: relative
        margin-top: 40px
    .selected
      display: block
    .error  
      border: solid 1px red

  &-operate-footer
    min-height: 88px
    width: 100%
    background: $footer-bg-color
    font-size: $font-size-h6
    color: $gray-txt-black
    text-align: center
    line-height: 26px
    padding: 0
    &-copyright
      .footer-copyright
        // height: 62px
        margin-top: 15px
      p
        line-height: 14px
      span
        margin: 0 10px
  &-forgot
    $step-bg-color  =  #4399f6
    $step-font-color  =#bbbbbb
    $base-green-color  = #A4CD74
    $step-send-color = #FFA338
    .forget-case
      margin: 40px auto
      background-color: $white-color
      padding: 50px
      border: solid 1px $border-color-light
      position: relative
    &-title
      font-size: $font-size-h4
      color: $gray-txt-light
      line-height: 18px
      padding-left: 10px
      border-left: 3px solid $title-red-color
      margin: 0
    &-step
      height: 50px
      margin: 40px auto
      text-align: center
      &-errors
        width: 600px
        margin: 0 auto
    &-substep
      text-align: center
      display: inline-block
      .instr
        color: $step-font-color
      .step-number
        width:280px
        display: inline-block
        span
          width: 22px
          height: 22px
          border-radius(50%)
          background: $step-font-color
          color: $white-color
          display: inline-block
          margin-left: -4px
        &:before
        &:after
          content: ''
          width: 120px
          height: 3px
          background: $step-font-color
          display: inline-block
    &-finish
      .instr
        color: $base-green-color
      .step-number
        span
          background: $base-green-color
        &:before
        &:after
          background: $base-green-color
    &-step1-warp
      width: 400px
      padding-botoom: 30px
      margin: 0 auto
      .form-group
        overflow: hidden
        position: relative
        padding-bottom: 18px
        margin-bottom: 10px
        &:first-child
          .help-inline
            position: absolute
            right: 0
        .help-inline
          height: 18px
          position: absolute
          right: 125px
          text-align: right
          font-size: $font-size-h6
        .entry-item
          width: 80px
          line-height: 40px
          text-align: right
          float: left
          color: $gray-txt-light
          margin: auto 20px 0 auto
          font-size: $font-size-base
        .forgot-input
          width: 170px
          height: 40px
          border: solid 1px $border-color-light
          border-radius(4px)
          float: left
          box-shadow: none
        input.error
          border: solid 1px $base-red-color
        .forgot-tel
          width: 300px
          float: left
        .tel-validate
          width: 120px
          height: 40px
          border: none
          margin-left: 10px
          float: left
          color: $white-color
          text-align: center
          line-height: 40px
          font-size: $font-size-base
          cursor: pointer
          background: $step-send-color
          border-radius(4px)
        .tel-validate[disabled]
          color: $border-color-light
          border-color: $border-color-light
        .img-validate
          border: 1px solid $border-color-light
          float: left
          width: 120px
          height: 40px
          margin-left: 10px
          border-radius(4px)
        .next-btn
          width: 300px
          height: 40px
          line-height: 40px
          background-color: $base-red-color
          border-radius(4px)
          margin: 40px auto 0 93px
      .picture-code
        display: none
    &-step2-warp
      width: 400px
      padding-bottom: 30px
      margin: 0 auto
      .form-group
        height: 68px
        position: relative
        padding-bottom: 18px
      .new-password
        margin-top: 40px
      .entry-item
        width: 74px
        line-height: 40px
        text-align: right
        float: left
        color: $gray-txt-light
        margin-right: 20px
        font-size: $font-size-base
      .forgot-input
        width: 300px
        height: 40px
        border: solid 1px $border-color-light
        border-radius(4px)
        float: left
        box-shadow: none
      .next-btn
        width: 300px
        height: 40px
        line-height: 40px
        background-color: $base-red-color
        border-radius(4px)
        margin: 20px auto 0 95px
    &-step3-warp
      margin-bottom: 72px
      .forgot-result
        width: 272px
        height: 34px
        font-size: $font-size-h3
        margin: 80px auto 42px
        .result
          width: 34px
          height: 35px
          border-radius: 50%
          text-align: center
          float: left
          margin-right: 8px
          background-color: $base-green-color
        .error
          background-color: $base-red-color
        .error-font
          color: $white-color
      p
        color: $gray-txt-black
        text-align: center
        margin: 20px auto 30px
      .forgot-finish
        width: 300px
        height: 40px
        background-color: $base-red-color
        border-radius(4px)
        margin: 0 auto
        line-height: 40px
        display: block
        text-align: center
        color: $white-color
  &-signup
    &-realname
      $btn-bg-blue = #336cbb
      $btn-bg-red = #ed3e40
      margin: 0 auto
      min-width: $container-width
      background: $white-color
      &-container
        background: $white-color
        padding: 40px 0
      &-header
        margin: 0 2px
        padding: 20px 0 25px
        border-bottom: 1px solid $border-signup-line
        text-align: center
        img
          display: block
          margin:0 auto
        strong
          color: $btn-bg-red
        i
          display: inline-block
          width: 34px
          height: 34px
          font-size: $font-size-h1
          color: $success-color
          vertical-align: bottom
        h3
          display: inline-block
          padding-top: 30px
          margin: 0
          color: $gray-txt-light
          line-height: 30px
          font-weight: 500
          vertical-align: bottom
        span
          display: block
          padding-top: 10px
          color:$gray-txt-black 
          font-size: $font-size-middle
          line-height: 20px
          text-align: center
        a
          margin: 0 5px 0
          color: $btn-bg-blue
      &-body
        padding: 0 250px
        h4
          padding: 30px 0 0
          line-height: 24px
          font-size: $font-size-h4
          text-align: center
          font-weight: 550
          color: $btn-bg-blue
        .form-group
          margin-left:63px
          margin-bottom: 20px
          width:390px
          &.error
            input
              border-color: $base-red-color
            .help-inline
              display: block
        .form-control
          height: 40px
          border-radius: 4px
          padding-left: 15px
        .realname-form
          min-width: 600px
          padding-top:45px
        .control-content
          position: relative
          left: 0
          top: 0
          display: inline-block
          border: 0
          width: 300px
          .help-inline
            position: absolute
            right: 0
            bottom: -16px
            width: 250px
            height: 14px
            font-size: $font-size-base
            line-height: 14px
            text-align: right
            color: $base-red-color
            .fa-custom-size
              margin-right: 5px
            &.success-msg
              color: $success-color
          .realname-confirm-btn
            width: 100%
            height: 40px
            border-radius: 4px
            font-size: $font-size-h4
            background-color: $btn-bg-red
            &:disabled
              background-color: $brand-gray
          .realname-link-home
            display: inline-block
            width: 100%
            padding-top: 12px
            color: $gray-txt-black
            font-size: $font-size-h6
            text-align: center
            cursor: pointer
        .realname-agree-wrapper
          top:-18px
          label
            width: 270px
            color: $gray-txt-black
        .realname-control-label
          padding-right:18px
          text-align: right
          width: 82px
          font-size: $font-size-base
          color: $gray-txt-light
        .realname-service-agree
          margin-top: 11px
        .realname-agree-link
          color: $brand-hover-color
      &-success
        background: $white-color
        img
          text-align: center
          margin: 160px auto 50px
          display: block
        h3
          color:$grey-color-dark
          font-size: $font-size-h3  
          text-align: center
          line-height: 1
          margin-bottom: 12px
        p
          color: $gray-txt-black
          font-size: $font-size-middle
          margin-bottom: 50px
          text-align: center
        a
          display: block
          text-align: center
          margin:0 auto 350px
          border-radius: 4px
          color: $white-color
          font-size: $font-size-h4
          height: 40px
          line-height: 40px
          width:300px
          background: $btn-bg-red
  &-body
    min-width: $container-width
  &-deposit
    _bgp()
      background-position: arguments
    $code = '0160' '0150' '0210' '0220' '5006' '5002' '0201' '5007' '5004' '5003' '5012' '5000' '5001' '5008' '5010' '5009' '5005' '0170' '5011' '5013' '1114' '0250' '5186'
    $bg-error-color = #fff4f4
    $input-focus-color = #73a3ff
    $font-title-color = #003D7E
    $title-style-color = #BCA06F
    $bank-border-color = #CCCCCC
    $bank-none-color = #9F9999
    $disabled-bg-color = #eeeeee
    $deposit-body = #f5f4f1
    &-body
      background-color: $deposit-body
    .section
      width: $container-width
      background-color: $white-color
      margin: 20px auto 40px
      padding: 60px 90px
    .hengfeng-logo
      width: 160px
      height: 45px
      display: block
      margin: 0 auto 16px
    &-item
      overflow: hidden
    &-title
      text-align: center
      margin: 0 auto 62px
      font-size: $font-size-h4
      color: $font-title-color
    &-item-title
      margin: 0 auto 40px 13px
      font-size: $font-size-h4
      line-height: 18px
      position: relative
      color: $gray-txt-light
      &:before
        content: ''
        width: 3px
        height: 18px
        position: absolute
        left: -10px
        background-color: $title-style-color
    .realname-item
    .bind-bankcard
    .trade-password-setting
      margin: 0 auto 30px 130px
      padding: 0 0 40px 48px
      border-bottom: solid 1px $border-color
    .form-group
      height: 40px
      text-align: center
      position: relative
      a
        cursor: pointer
        float: left
        line-height: 40px
    .bank-card-error
      height: 20px
      float: left
      margin: 12px auto auto 30px
      color: $base-red-color
      font-size: $font-size-h6
    label
      width: 112px
      text-align: right
      font-weight: lighter
      float: left
      margin: 10px 20px auto auto
      font-size: $font-size-base
    .select-bank
      float: left
      width: 300px
      height: 40px
      position: relative
      &:before
        content: ''
        display: block
        width: 26px
        height: 26px
        position: absolute
        left: 15px
        top: 7px
        z-index: 100
      // .more-icon
      //   position: absolute
      //   right: 15px
      //   top: 12px
    .selected-bank
      float: left
      width: 300px
      height: 40px
      position: relative
      cursor: pointer
      line-height: 40px
      text-align: left
      padding: 0 10px
      font-size: $font-size-middle
      border: solid 1px $bank-border-color
      border-radius(4px)
      &-logo
        width: 26px
        height: 26px
        position: absolute
        left: 10px
        top: 6px
        border: 0
        background: url('/img/bank_logo_small.png') no-repeat -2px 0
      for code, index in $code
        .selected-bank-logo-{code}
          _bgp(-2px, (-46*index)px)
    .selected-bank
      padding-left: 48px
    .bank-card-limit
      float: left
      margin: 0 20px 0 10px
      line-height: 40px
      font-size: $font-size-base
      color: $gray-txt-black
      height: 40px
    .form-control
      width: 300px
      height: 40px
      float: left
      box-shadow: none
      background-color: $white-color
      font-size: $font-size-base
      &:focus
        border: solid 1px $input-focus-color
        box-shadow: none
    .select-bank-item
      padding-left: 48px
    .show-bank-name
      background-color: $disabled-bg-color
    for code, index in $code
      .select-bank-{code}
        &:before
          background-image: url('/img/bank_logo_small.png')
          _bgp(-2px, (-46*index)px)
    .bank-name-list
      width: 300px
      height: 40px
      padding: 0 10px
      float: left
      border-radius(4px)
      appearance: none
      box-shadow: none
      outline: none
      position: relative
      &:before
        content: ''
        width: 0
        height: 0
        border-width: 8px 8px 0 8px
        border-color: $text-helper-color transparent;
        position: absolute
        left: 15px
        top: 12px
        z-index: 100
    input[type='checkbox']
      margin: 4px 5px 0 122px
      float: left
    .form-button-control
      width: 300px
      height: 40px
      line-height: 28px
      background-color: $title-style-color
      font-size: $font-size-base
      margin-left: auto
      margin-right: auto
      outline: none
      color: $white-color
      &:hover
        background-color: $title-style-color
      &:active
        background-color: $title-style-color
        outline: none
        box-shadow: none
    .btn-loading
      position: relative
      &:before
        content: ''
        width: 36px
        height: 36px
        background: url('/img/create-account-btn-loading.gif') no-repeat;
        position: absolute
        left: 132px
        top: 0
    a
      color: $font-title-color
    .help-inline
      float: left
      margin-left: 30px
      font-size: $font-size-h6
      padding: auto 0
      line-height: 40px
      max-height: 40px
      position: relative
      max-width: 250px
    .errors
      margin: 0 auto 0 310px
      position: absolute
      top: -24px
      height: 20px
      color: $base-red-color
    .input-error
      border: solid 1px $base-red-color
    &-result
      text-align: center
      img
        margin: 20px auto 50px
      .section
        height: 500px
        text-align: center
        width: $container-width
        height: 550px
        margin: 20px auto
        text-align: center
        background-color: $white-color
      p
        text-align: center
        font-size: $font-size-huge
        color: $grey-color-dark
        margin: 0 auto 20px
      h5
        text-align: center
        margin-bottom: 64px
        color: $gray-txt-black
        font-size: $font-size-middle
      a
        display: block
        width: 300px
        height: 40px
        margin: 0 auto 20px
        border-radius(4px)
        border: solid 1px $title-style-color
        line-height: 40px
        font-size: $font-size-h4
        text-align: center
        color: $title-style-color
        &:hover
          background-color: $title-style-color
          color: $white-color
  &-voice
    .voice-verifycode
      display: none
