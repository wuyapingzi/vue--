body
  background: $bg-color
  position: relative
  reset-text()
a
  color: $gray-txt-light
a:hover,
a:focus
  text-decoration: none
.section
  width: $container-width
  margin: 0 auto
  padding: 0
.header
  $header-top-color = #5E6873
  $header-title-color = #E6E6E6
  $header-tips-color = #C7CBCF
  min-width: $container-width
  height: 70px
  line-height: 70px
  overflow: hidden
  border-bottom: 1px solid $border-color
  box-shadow: 1px 3px 5px #eee
  background: $white-color
  clearfix()
  &-title
    height: 34px
    line-height: 34px
    font-size: $font-size-h4
    color: $gray-txt-black
    display: inline-block
    margin-left: 14px
    float: left
    margin: 20px auto auto 20px
    padding-left: 20px
    border-left: solid 1px $header-title-color
  &-top
    min-width: $container-width
    background: $base-blue-color
    height: 30px
    color: $white-color
    text-align: right
    font-size: $font-size-h6
    line-height: 30px
    &-item
      margin: 0 15px
      position: relative
      color:$white-color
      &:hover
        color: $white-color
      &:after
        content: ''
        position: absolute
        width: 1px
        height: 12px
        top: 50%
        margin-top: (0 - @height/2)
        right: -15px
        background-color: $header-top-color
    .header-top-aboutus
      margin-right: 15px
    .header-login
      margin: 0
      background: $base-red-color
      padding: 0 15px
    .header-signup
      padding: 0 15px
      position: relative
      &:after
        content: ''
        position: absolute
        width: 1px
        height: 12px
        top: 50%
        margin-top: (0 - @height/2)
        right: 0
        background-color: $header-top-color
    .header-top-app
      margin-right: 15px
      position: relative
      &:focus
        color: $white-color
      &:after
        content: ''
        position: absolute
        width: 1px
        height: 12px
        top: 50%
        margin-top: (0 - @height/2)
        right: -15px
        background-color: $header-top-color
    .header-tips
      margin-left: 15px
      color: $header-tips-color
    .header-top-welcome
      color: $white-color
      margin-right: 10px
    .header-top-logout
      color: $white-color
      position: relative
      margin-right: 10px
      &:after
        content: ''
        position: absolute
        width: 1px
        height: 12px
        top: 50%
        margin-top: (0 - @height/2)
        right: -15px
        background-color: $header-top-color
    &-message
      color: $white-color
      .message
        &-icon
          margin-left: 5px
        &-unread
          position: relative
          &:after
            content: ''
            position: absolute
            width: 5px
            height: 5px
            border-radius: 50%
            right: -2px
            background-color: $base-red-color
      &:hover
        color: $white-color
  &-reg
    &-btn
      display: inline-block
      color: $white-color
      text-decoration: none
      margin-right: 0
      &:hover
        color: $white-color
    .company-tel
      position: relative
      float: left
      color: $white-color
      padding-left: 20px
      &:before
        content: ' '
        display: block
        width: 12px
        height: 10px
        position: absolute
        top: 48%
        left: 0
        margin-top: (0 - @height/2)
        background-image: url(/img/header_tel.png)
  &-login
    background: $base-red-color
    padding: 0 15px
    margin: 0
    img
      display: block
  &-signup
    position: relative
    &:after
      content: ''
      position: absolute
      width: 1px
      height: 12px
      top: 50%
      margin-top: (0 - @height/2)
      right: 0
      background-color: $header-top-color
  &-logo
    display: table-cell
    vertical-align: middle
    float: left
    a
      float: left
  &-nav
    float: right
    clearfix()
    ul
      margin: 0
    li
      float: left
      list-style: none
      padding: 0 25px
      font-size: $font-size-middle
    .last-nav
      padding-right: 0
      position: relative
      margin-left: 25px
      &:before
        content: ''
        width: 18px
        height: 18px
        top: 25px
        left: 1px
        position: absolute
        background: url('/img/nav_account.png') center center no-repeat
    a
      padding: 25px 0
      color: $grey-color-dark
      text-decoration: none
      &:hover
        color: $base-red-color
    .native
      color: $base-red-color
      .user-icon
        background: url('/img/nav_account_act.png') center center no-repeat
  &-secondary-nav
    min-width: $container-width
    height: 50px
    line-height: 50px
    background: $white-color
    ul
      margin: 0
      padding: 0
    li
      float: left
      padding-right: 30px
      list-style: none
      font-size: $font-size-base
      a
        display: block
        color: $grey-color-dark
        text-decoration: none
        position: relative
        &:hover
          color: $base-red-color
      .native
        color: $base-red-color
        &:after
          content: ' '
          position: absolute
          bottom: 0
          left: 0
          width: 100%
          height: 2px
          background: $base-red-color
          display: block
.footer
  $footer-grey-color = #717b85
  $footer-grey-light-color = #C7CBCF
  $footer-bg-color = #192837
  min-width: $container-width
  padding: 40px 0 25px
  background: $footer-bg-color
  color: $footer-grey-color
  font-size: $font-size-h6
  .section
    overflow: visible;
  &-section
    position: relative
    border-bottom: 1px solid rgba(255,255,255, 0.06)
    dt
      font-size: $font-size-middle
      color: $white-color
      float: left
      margin-top: -2px
      &:hover
        color: $white-color
    a
      color: $footer-grey-color
      font-size: $font-size-base
      padding-right: 20px
      margin: 0 0 20px 20px
      border-right: solid 1px $footer-grey-color
      float: left
      line-height: 16px
      &:hover
        color: $footer-grey-color
    .footer-section-last
      border-right: none
    .footer-section-first
      margin-left: 0
    .service-desc
      color: $footer-grey-color
      line-height: 16px
      font-size: $font-size-base
    dl
      width: 600px
      height: 18px
      margin: 0 0 20px 0
    dt
      margin-right: 20px
      font-weight: normal
      float: left
    dd
      float: left
  &-weixin
    width: 260px
    margin: 10px auto auto 225px
    text-align: center
    position: absolute
    right: 0
    top: -15px
    &-item
      float: right
    img
      width: 100px
      height: 100px
      margin-left: 30px
    h5
      font-size: $font-size-h6
      color: $white-color
      margin-top: 5px
  &-copyright
    text-align: center
    margin-top: 16px
    &-tips-light
      color: $grey-color
    &-public-tips-light
      color: $footer-grey-light-color
    &-user-link
      color: $gray-txt-black
    &-link
      color: $footer-grey-color
      &:hover
        color: $footer-grey-color
  &-secure
    margin-top: 16px
    a
      display: inline-block
      width: 88px
      height: 32px
      margin-right: 10px
      opacity: 0.3
      &:hover
        opacity: 1
    .finance
      background: url('/img/base-finance.png') no-repeat
    .certification
      background: url('/img/base-certification.png') no-repeat
    .safe
      background: url('/img/base-safe.png') no-repeat
    .secured
      background: url('/img/base-secured.png') no-repeat
    .police
      background: url('/img/base-police.png') no-repeat
  &-service
    margin: 10px auto auto 230px
    color: $white-color
    width: 150px
    &-header
      font-size: $font-size-h4
      margin-bottom: 20px
      i
        margin-right: 10px
    &-body
      font-size: $font-size-h3
      p
        font-size: $font-size-h6
        margin-top: 6px
.error
  &-nothing
    padding-top: 60px
    min-height: 320px
    &-header
      width: 172px
      height: 190px
      background: url('/img/no-data-error.png') center center no-repeat
      margin: 0 auto 10px
    &-body
      text-align: center
.loading
  text-align: center
#udesk_btn
  a
    position: fixed
    top: auto !important
    bottom: 102px
    right: 20px !important 
    margin: 0 !important
    &:hover
      background: url('/img/tel-service-active.png') no-repeat 0px -1px
      img
        opacity: 0
.manual-center
  text-align: center
  font-weight: bold
