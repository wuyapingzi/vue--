.app
  $font-size-download = 44px
  $font-size-iconic = 40px
  $app-download-banner-bg = #ebebeb
  $font-size-large-item = 34px
  $font-color-section = #666
  $section-plan-bg = #f5f5f5
  $app-download-footer-bg = #192837
  $font-color-footer = #717b85
  min-width: $container-width
  background: url('/img/app-banner.png') repeat-x center 0
  &-section
    position: relative
    height: 640px
    &-avatar
      position: absolute
      left: 80px
      bottom: 90px
    &-body
      float: right
      margin: 190px 110px 0 0
      font-size: 0
    &-title
      padding-bottom: 72px
      font-size: $font-size-large-item
      line-height: 1
      span
        font-size: $font-size-huge
    &-item
      display: inline-block
      padding-top: 94px
      min-width: 76px
      font-size: $font-size-base
      text-align: center
      color: $font-color-section
      background-position: center 0
      background-repeat: no-repeat
  &-logo
    padding: 62px 0 0 110px
  &-btn-text
    vertical-align: middle
    display: inline-block
    margin: 0
    padding: 0
    text-align: left
  &-body
    &-title
      padding: 128px 0 60px 110px
      line-height: 1
      font-size: $font-size-download
    a
      display: block
      margin-left: 300px
      width: 204px
      height: 70px
      text-align: center
      font-size: $font-size-large
      border: 1px solid $grey-color-dark
      border-radius(4px)
      &:hover
      &:focus
        color: $grey-color-dark
    i
      vertical-align: middle
      margin-right: 10px
      font-size: $font-size-iconic
      line-height: 68px
    span
      display: block
      font-size: $font-size-base
      line-height: $font-size-h3
    .app-btn-largetext
      font-size: $font-size-h3
      line-height: 1
    &-qrCode
      float: left
      margin-left: 110px
      padding: 6px
      width: 170px
      height: 170px
      border: 1px solid $gray-txt-light
  &-android
    margin-top: 31px
  &-mobile
    position: absolute
    bottom: 0
    right: 110px
    width: 329px
    height: 520px
    background: url('/img/app-phone-home-0525.png') no-repeat
  &-item-avatar
    position: absolute
    left: 0
    bottom: 126px
  &-escrow
    min-width: $container-width
    background: $white-color
    &-safe
      text-indent: 2px
      background: url('/img/app-escorw-safe.png') no-repeat 0 0
    &-fund
      margin: 0 70px
      text-indent: 8px
      background: url('/img/app-escrow-fund.png') no-repeat 0 0
    &-legal
      text-indent: 8px
      background: url('/img/app-escorw-legal.png') no-repeat 0 0
  &-plan
    min-width: $container-width
    background: $section-plan-bg
    &-access
      background-image: url('/img/app-plan-access.png')
    &-lend
      margin: 0 70px
      background-image: url('/img/app-plan-lend.png')
    &-earnings
      background-image: url('/img/app-plan-earnings.png')
  &-loan
    min-width: $container-width
    background: $white-color
    &-lend
      background-image: url('/img/app-loan-lend.png')
    &-invest
      margin: 0 70px
      background-image: url('/img/app-loan-invest.png')
    &-earnings
      background-image: url('/img/app-loan-earnings.png')
    img
      left: 566px
    .app-section-body
      float: left
      margin-left: 110px
  &-otherdownload
    min-width: $container-width
    text-align: center
    background: url('/img/app-otherdownload-new.png') repeat-x center 0
    img
      margin-top: 106px
      padding: 10px
      width: 273px
      height: 270px
      border: 1px solid $gray-txt-light
    &-btn
      font-size: 0
      padding-top: 60px
      a
        display: inline-block
        margin: 0 31px
        width: 256px
        height: 86px
        border: 1px solid $gray-txt-light
        border-radius(4px)
        &:hover
        &:focus
          color: $grey-color-dark
      i
        vertical-align: middle
        margin-right: 20px
        font-size: $font-size-giant
        line-height: 84px
      span
        display: block
        font-size: $font-size-large
        line-height: 28px
      .app-btn
        &-text
          width: 140px
        &-largetext
          font-size: $font-size-h2
          line-height: 1
  &-footer
    min-width: $container-width
    background: $app-download-footer-bg
    color: $font-color-footer
    a
      color: $font-color-footer

