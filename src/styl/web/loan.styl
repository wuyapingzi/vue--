.loan
  $info-bg-color  = #f9f9f9
  background-color: $bg-color
  $btn-base-color =  #4970a7
  $loan-state-bg-color = #ED3E40
  $loan-buy-border= #F55151
  $grey-color-lighter = #999999
  $affirm-bg-deep-color = #9C4C4C
  $confirm-bg-color = #FEEEEE
  $affirm-trade-color = #73A3FF
  min-height: 500px
  &-banner
    min-width: 1100px
    height: 300px
    background: url(/img/loan-banner-new.jpg) no-repeat center center
  &-list-body  
    background: $white-color
    margin: 20px auto
  &-list
    display: table
    border-collapse: collapse
    width: 96%
    margin: 0 auto
    th,
    td
      text-align: center
      line-height: 32px
      font-weight: normal
    th
      line-height: 45px
      color: $grey-color-lighter   
    td
      line-height: 42px
    .header
      &-line
        height: 50px
        line-height: 50px
        border-bottom: 1px solid #EAEAEA
        background-color: $white-color
        color: $grey-color-lighter 
        display: table-row
        text-align: center
        .col-title
          width: 18%
          padding-left: 20px
          text-align: left
        .col-progress
          width: 20%
        .col-bidding-state
          width: 15%
          text-align: center
        .col-loan-money
          width: 18%
      &-item
        display: table-cell  
  &-list-content
    display: table-row-group
    .item-list
      height: 70px
      border-top: 1px solid #EAEAEA
      background-color: $white-color
      display: table-row
      line-height: 70px
      &:hover
        background: $info-bg-color
        .bidding-status
          width: 70px
          height: 30px
          color: $white-color
          background-color: $loan-state-bg-color
      .rate
        color: $base-red-color
    .item-cell
      font-size: $font-size-base
      color: $gray-txt-light
      text-align: center
      display: table-cell
      vertical-align: middle
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
      progress(#f55151,60px,4px)
      &:first-child
        padding-left: 20px
        text-align: left
      .progress
        margin: 12px 6px 10px auto
        float: right
        margin-left: 46px
      .percent
        width: 35px
        height: 20px
        display: inline-block
        text-align: right
        float: right
        margin-right: 60px
        line-height: 28px
      .bidding-status
        margin: 0
        line-height: 30px
        width: 70px
        text-align: center
        display: inline-block
        border-radius: 3px
        color: $loan-state-bg-color
  &-detail
    $info-title-color = #636363
    &-body
      $info-list-bg = #f7f9fc
      .item
        &-info
          margin: 0 20px
          &-title
            font-size: $font-size-h4
            color: $text-color
            padding: 0 0 0 20px
            margin: 80px 0 30px
            border-left: 3px solid $loan-state-bg-color
          &-first
            margin-top: 50px  
          &-wrap
            color: $gray-txt-light
            clearfix()
            span
              color: $gray-txt-black
              margin-right: 10px
            .item-attest
              margin-right: 70px  
            .icon-wrap
              display: inline-block
              vertical-align: middle
              position: relative
              height: 48px
              margin-left: 26px
              margin-right: 0
              p 
                line-height: 56px
                margin: 0
                max-width: 140px
                overflow: hidden
                height: 48px
              &:before
              &:after
                content: ''
                display: block
                position: absolute
                background: url('/img/loan-check-status.png') no-repeat
              &:before
                background-position: 0 0
                background-size: 65px 97px
                left: -30px
                width: 19px
                height: 19px
                top: 18px
              &:after
                background-position: 0 -33px
                background-size: 65px 97px
                width: 55px
                height: 48px
                right: -30px
                top: 0
          &-safe-level
            float: left
            width: 28px
            height: 33px
            text-align: center
            line-height: 38px
            color: $btn-primary-color
            background: url('/img/loan-safe-level-bg.png')
            &-descript
              line-height: 32px
              margin-left: 38px
          &-cont-item
            display: inline-block
            width: 49%
            margin: 10px 0 
            span
              display: inline-block
              width: 15%
            .month-opera-title
              width: auto
          .loan-sign
            color: #73ADFF
            text-decoration: underline  
          h3
            font-size: $font-size-middle
            margin-top: 60px
            padding: 0 20px
          &-desc
            padding: 0 20px
        &-order
          h3
            font-size: $font-size-h4
            margin-top: 60px
            padding-left: 20px
        &-list-box
          thead
            color: $gray-txt-black
            background: $info-list-bg
          th
            font-weight: normal
            padding: 20px 0 20px 0
            text-align: center
          td
            padding: 20px 0 20px 0
            border-bottom: 1px solid $border-color-light
            text-align: center
          .normal
            td
              color: $gray-txt-black
          .icon-tips
            margin-left: 5px
      .last-no-border
        td
          border: none
  &-user-secure
    &-modal
      width: 500px
      &-header
        padding: 20px
        border-bottom: none
      &-body
        text-align: center
        height: 100px
      &-font
        font-size: $font-size-h2
        color: $base-red-color
      &-title
        font-size: $font-size-h3
        margin-left: 10px
      &-footer
        padding: 30px
        text-align: center
        border-top: none
      &-footer-btn
        display: inline-block
        line-height: 40px
        text-align: center
        width: 160px
        height: 40px
        border-radius: 2px  
        border-radius: 2px
  &-buy-confirm
    $buy-blue-linghter= #f6f9ff
    $buy-confirm-line = #e9ecf2
    $buy-confirm-small-bg = #D7ABAB
    $buy-confirm-border = #FEF0F0
    background: $white-color
    margin: 20px auto 40px
    padding: 40px
    position: relative
    z-index: 5
    h3
      text-align: left
      border-left: 3px solid $loan-buy-border
      padding-left: 10px
      position: relative
      margin: 0 0 70px 0 
      font-size: $font-size-h4
    &-box
      width: 600px
      margin: 0 auto
      padding: 30px
      background: $white-color
      border: 1px solid $buy-confirm-border
      box-shadow:  0 2px 8px 1px $buy-confirm-border
      position: relative
      &:before
        content: ''
        display: inline-block
        position: absolute
        top: -14px
        left: -23px
        width: 644px
        height: 20px
        background: url('/img/affirm-bg.png') no-repeat
        z-index: -1
      .item-list
        clearfix()
      .item-title
        width: 212px
        color: $grey-color-lighter
        font-size: $font-size-middle
        float: left
        text-align: right
        line-height: 52px
      .item-content
        margin-left: 212px
        padding-left: 50px
        line-height: 52px
        font-size: $font-size-middle
        color: $grey-color-dark
      .principal
        color: $grey-color-lighter
    &-trade
      margin-top: 40px
      .trade-text 
        display: inline-block
        trxt-align: right
        margin-left: 280px
      .trade-password
        width: 300px
        height: 40px
        line-height: 40px
        padding: 0 15px
        margin-left: 20px
        border-radius(4px)
        display: inline-block
      .trade-forgot
        padding-top: 10px
        width: 300px
        margin-left: 360px
        float: left
        color: $loan-state-bg-color
        a
          float: right
          color: $affirm-trade-color
      ul
        padding: 0
        display: inline-block
        list-style: none
    &-check
      margin: 10px auto 0
      text-align: center
      input[type='checkbox']
        width: 12px
        height: 12px
        margin: -1px 6px 0 0
        vertical-align: middle
      label
        font-weight: normal
    &-link
      color: $affirm-trade-color
      font-weight: normal
    .buy-confirm-wrapper
      width: 560px
      margin: 0 auto
      .btn-buy-confirm
        width: 300px
        height: 40px
        line-height: 40px
        border-radius(4px)
        margin: 60px auto 0
        display: block
  &-buy-failed
    $btn-hover-color = #5d83ba
    width: $container-width
    position: relative
    height: 680px
    margin: 20px auto 40px
    text-align: center
    background-color: $white-color
    .error
      &-warpper
        width: 480px
        height: 280px
        position: absolute
        top: -100px
        bottom: 0
        left: 0
        right: 0
        margin: auto
        .buy-result-btn
          font-size: $font-size-h4  
          line-height: 36px
      &-title
        margin-top: 50px
        text-align: center
      &-hint-font
        color: $base-red-color
        vertical-align: middle
        font-size: $font-size-h1
        line-height: 45px
        margin-top: -5px
      &-hint-message
        font-size: $font-size-huge
        line-height: 1
      &-msg
        margin-top: 20px
        font-size: $font-size-middle
        color: $gray-txt-black
        line-height: 1
    h5
      color: $gray-txt-black
      margin-top: 28px
    .recharge-link
    .result-link
      width: 300px
      display: block
      height: 44px
      text-align: center
      line-height: 44px
      color: $gray-txt-light
      border-radius: 4px
      color: $white-color
      margin: 70px auto 0
  &-item-status
    padding: 30px
    min-height: 270px
    border: none
    background: linear-gradient(left, #feb855, #fa9522)
    h3
      border-bottom: 1px solid $white-color
      text-align: center
      padding: 10px 0
      color: $white-color
    h6
      color: $white-color
      text-align: center
    .item
      &-bidding-intro
        margin-top: 40px
        overflow: hidden
        clearfix()
        dl
          float: left
          margin: 0
          text-align: center
          border-right: 1px solid $grey-linghter
        dt
          font-size: $font-size-h6
          color: $white-color
          font-weight: normal
        dd
          font-size: $font-size-h5
          color: $white-color
          font-weight: normal
        .item-bidding-periods
          width: 40%
        .item-biddingdone-periods
          width: 50%
        .item-bidding-date
          width: 60%
          border: none
        .icon-tips
          margin-left: 6px
        .item-biddingdone-date
          width: 50%
          border: none
  &-item-done
    padding: 30px
    min-height: 270px
    border: none
    background: linear-gradient(-225deg, #4376d6 0%, #97dbff 100%)
    .item-settle-date
      margin: 38px auto 10px
    .date
      font-size: $font-size-h3
      color: $white-color
      font-weight: normal
      text-align: center
  &-item-failed
    padding: 58px
    min-height: 270px
    border: none
    background: linear-gradient(-225deg, #acacac 0%, #f6f6f6 100%)
  &-buy-form
    padding-top: 60px
    .form-group
      margin-bottom: 4px
    .item-earning
      float: left
    .item-charge
      float: right
      margin-right: 4px
      &-link
        font-size: $font-size-h6
        color: $btn-base-color
    .form-ipt-box
      height: 62px
      margin-top: 20px
    .form-control
      background: none
      height: 42px
    .loan-vote-input
      height: 48px
      background: $white-color
    .loan-error-warn
      height: 18px
      margin-top: 4px
    .error-warn
      font-size: $font-size-h6
    .item-title
      line-height: 24px
