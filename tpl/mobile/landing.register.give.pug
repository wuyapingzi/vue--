extends base

block title
  | 红小宝注册立送双重豪礼

block page-val
  - var pageClass = 'propoganda-body landing-register-give-height'

block content
  .landing-register-give
    .landing-register-give-result.hide#J_result
      img(src='/img/landing-register-give-result-bg.jpg')
      .landing-register-give-download
        a(href='http://a.app.qq.com/o/simple.jsp?pkgname=com.hoomsun.hxb').landing-register-give-backtop 下载红小宝APP
      img.result-bottom(src='/img/landing-register-give-result-bottom.png')
    .landing-register-give-main#J_wrap
      img(src='/img/landing-register-give-header.png')
      .landing-register-give-content
        .propoganda-page.propoganda-register
          - var _mobileIconUrl = '/img/propoganda-register-give-mobile.png'
          - var _smscodeIconUrl = '/img/propoganda-register-give-smscode.png'
          - var _passwordIconUrl = '/img/propoganda-register-give-password.png'
          - var _btnColor = 'btn-purple'
          include ./mod/register.form.nocode.pug
        img(src='/img/landing-register-give-body.png')
      img(src='/img/landing-register-give-footer.png')
      .landing-register-give-body
        .landing-register-give-body-top
          .title 明星产品
          .item
            .item-content 
              .item-title 红利智投
              .item-body
                .item-list.item-rate
                  .item-list-header 6.5
                    span %
                  .item-list-footer 平均历史年化收益
                .item-list.item-limit
                  .item-list-header 3
                    span 个月
                  .item-list-footer 锁定期
                .item-list
                  .item-list-header 1000
                    span 元
                  .item-list-footer 起投金额
          .item.item-bottom
            .item-content 
              .item-title 红利智投
              .item-body
                .item-list.item-rate
                  .item-list-header 9.6
                    span %
                  .item-list-footer 平均历史年化收益
                .item-list.item-limit
                  .item-list-header 12
                    span 个月
                  .item-list-footer 锁定期
                .item-list
                  .item-list-header 1000
                    span 元
                  .item-list-footer 起投金额
        .landing-register-give-body-bottom
          .title 安全透明
          .item
            .item-content 
              h4 恒丰银行资金存管
              p 用户资金由恒丰银行存管，
                br
                | 平台接触不到用户资金，不可能卷款跑路
              img(src='/img/landing-register-give-safe.png')
          .item
            .item-content
              h4 四重风控审核，精选优质资产
              p 平台与同盾反欺诈、美林大数据、 
                br
                | 上海资信等第三方合作，标准化审核流程，确保
                br
                | 每个上线项目优质可靠
              img(src='/img/landing-register-give-fine-new.png')
          .item
            .item-content
              h4 智能分散，有效降低风险
              p 用户只需要买入，后台系统自动将出借资金小
                br
                | 额分到多个项目中，有效降低单一结款人违约的风险
              img(src='/img/landing-register-give-reduce.png') 
      .landing-register-give-footer
        include ./mod/landing.footer.pug

block foot-script
  script.
    app.landingCarnival.init({
      form: '#J_user-register-form',
      mobile: '#J_mobile',
      password: '#J_password',
      trigger: '#J_verifycode',
      smscode: '#J_smscode',
      noCaptcha: true
    });
    app.util.wx.init({
      title: '银行存管的高收益平台',
      link: '/landing/register/give',
      desc: '告别死工资，注册送1288现金红包',
      imgUrl: '/img/invite-logo.png'
    });